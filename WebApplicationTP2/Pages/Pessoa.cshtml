@page "/"
@model PessoaModel
@{
}

<div>
    <p class="fw-bold ">Lista de Pessoas</p>
</div>
<div class="container-fluid flex border border-dark p-3 my-3">
    <table class="table table-hover">
        <thead>
        <th>Nome</th>
        <th>Idade</th>
        <th>CPF</th>
        </thead>
        <tbody>
            @foreach (var p in Model.pessoaList)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Idade</td>
                    <td>@p.Cpf</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p class="text-left">Total de Pessoas: @Model.pessoaList.Count</p>
    </div>